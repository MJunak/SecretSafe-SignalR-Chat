@model SecretSafe.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}



<div class="panel panel-success">
    <div class="panel-heading">
        <div class="panel-title">
            <span class="glyphicon glyphicon-alert pull-right" style="font-size: 25px; margin-right: 15px"
                  data-toggle="tooltip" data-placement="right"
                  title="With your registration you're agreeing to the terms of service and the privacy policy"></span>

            <h3>@ViewBag.Title.</h3>
        </div>
    </div>
    <div class="panel-body">
        <div class="panel panel-success">
            <div class="panel-heading">
                <div class="panel-title">
                    <h4>Create a new account.</h4>
                </div>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <hr />
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group row">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.NickName, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.NickName, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
                    </div>
                    <hr />
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" class="btn btn-success" value="Register" />
                        </div>
                    </div>
                }
            </div>
        </div>


    </div>
    <div class="panel-footer">
        @Html.ActionLink("Login", "Login", "Account", null, new { @class = "btn btn-info" })
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
